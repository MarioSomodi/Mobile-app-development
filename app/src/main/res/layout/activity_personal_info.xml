<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".PersonalInfoActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:id="@+id/imgView"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_launcher_round"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputLayoutIme"
        app:layout_constraintTop_toBottomOf="@+id/imgView"
        app:layout_constraintRight_toLeftOf="@+id/inputLayoutPrezime"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_percent="0.45"
        android:hint="@string/placeholderIme">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etIme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputLayoutPrezime"
        app:layout_constraintTop_toBottomOf="@+id/imgView"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintWidth_percent="0.45"
        android:hint="@string/placeholderPrezime">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPrezime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <View
        android:layout_width="match_parent"
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/inputLayoutPrezime"
        android:layout_height="2dp"
        android:layout_marginVertical="16dp"
        android:background="#c0c0c0"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputLayoutDatumR"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintWidth_percent="0.45"
        android:hint="@string/placeholderDatumR">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDatumR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inputLayoutDatumR"
        android:textAlignment="textStart"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintWidth_percent="0.40"
        android:text="@string/textvDatum"
        />
    <View
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/inputLayoutDatumR"
        android:layout_height="2dp"
        android:layout_marginVertical="16dp"
        android:background="#c0c0c0"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnUnos"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btnUnosIme"
    />
</androidx.constraintlayout.widget.ConstraintLayout>