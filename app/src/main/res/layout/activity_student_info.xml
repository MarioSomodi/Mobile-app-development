<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".StudentInfoActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:id="@+id/imgView2"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_launcher_round"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputLayoutPredmet"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imgView2"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/placeholderPredmet">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPredmet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputLayoutProfesor"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/inputLayoutAkGod"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutPredmet"
        android:layout_marginStart="16dp"
        app:layout_constraintWidth_percent="0.45"
        android:hint="@string/placeholderProf">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etProfesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/inputLayoutProfesor"
        android:id="@+id/inputLayoutAkGod"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutPredmet"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintWidth_percent="0.43"
        android:layout_marginEnd="16dp"
        android:hint="@string/placeholderAkGod">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAkGod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputLayoutPH"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/inputLayoutLVH"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutProfesor"
        android:layout_marginStart="16dp"
        app:layout_constraintWidth_percent="0.45"
        android:hint="@string/placeholderLVH">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/inputLayoutPH"
        android:id="@+id/inputLayoutLVH"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutAkGod"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintWidth_percent="0.43"
        android:layout_marginEnd="16dp"
        android:hint="@string/placeholderPH">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLVH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnUnos"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btnUnosPredmet"
        />
</androidx.constraintlayout.widget.ConstraintLayout>